<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityQuickAction">

    <ImageView
        android:id="@+id/activity_skirmish_img_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_background" />

    <fragment
        android:id="@+id/activity_skirmish_header"
        android:name="pl.marekcel.fsg.FragmentHeader"
        tools:layout="@layout/fragment_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_skirmish_header"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/activity_skirmish_btn_action"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin_half"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin">

                <TableRow
                    android:id="@+id/activity_skirmish_tr_scenery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/activity_skirmish_tv_scenery_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/skirmish_scenery" />
                    <TextView
                        android:id="@+id/activity_skirmish_tv_scenery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Oahu" />
                    <Button
                        android:id="@+id/activity_skirmish_btn_change_scenery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:onClick="onButtonChangeSceneryClicked"
                        android:text="@string/skirmish_change" />
                </TableRow>

                <TableRow
                    android:id="@+id/activity_skirmish_tr_ownship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/activity_skirmish_tv_ownship_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/skirmish_your_aircraft" />
                    <TextView
                        android:id="@+id/activity_skirmish_tv_ownship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="AT-6 Texan" />
                    <Button
                        android:id="@+id/activity_skirmish_btn_change_ownship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:onClick="onButtonChangeOwnshipClicked"
                        android:text="@string/skirmish_change" />
                </TableRow>

                <TableRow
                    android:id="@+id/activity_skirmish_tr_wingman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/activity_skirmish_tv_wingman_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/skirmish_wingman_aircraft" />
                    <TextView
                        android:id="@+id/activity_skirmish_tv_wingman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="AT-6 Texan" />
                    <Button
                        android:id="@+id/activity_skirmish_btn_change_wingman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:onClick="onButtonChangeWingmanClicked"
                        android:text="@string/skirmish_change" />
                </TableRow>

                <TableRow
                    android:id="@+id/activity_skirmish_tr_ally_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/activity_skirmish_tv_ally_1_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/skirmish_ally_aircraft" />
                    <TextView
                        android:id="@+id/activity_skirmish_tv_friend_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="AT-6 Texan" />
                    <Button
                        android:id="@+id/activity_skirmish_btn_change_ally_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:onClick="onButtonChangeAlly1Clicked"
                        android:text="@string/skirmish_change" />
                </TableRow>

                <TableRow
                    android:id="@+id/activity_skirmish_tr_ally_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/activity_skirmish_tv_ally_2_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/skirmish_ally_aircraft" />
                    <TextView
                        android:id="@+id/activity_skirmish_tv_friend_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="AT-6 Texan" />
                    <Button
                        android:id="@+id/activity_skirmish_btn_change_ally_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:onClick="onButtonChangeAlly2Clicked"
                        android:text="@string/skirmish_change" />
                </TableRow>

                <TableRow
                    android:id="@+id/activity_skirmish_tr_enemy_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/activity_skirmish_tv_enemy_1_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/skirmish_opponent_aircraft" />
                    <TextView
                        android:id="@+id/activity_skirmish_tv_enemy_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="A6M Zero" />
                    <Button
                        android:id="@+id/activity_skirmish_btn_change_enemy_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:onClick="onButtonChangeEnemy1Clicked"
                        android:text="@string/skirmish_change" />
                </TableRow>

                <TableRow
                    android:id="@+id/activity_skirmish_tr_enemy_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/activity_skirmish_tv_enemy_2_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/skirmish_opponent_aircraft" />
                    <TextView
                        android:id="@+id/activity_skirmish_tv_enemy_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="A6M Zero" />
                    <Button
                        android:id="@+id/activity_skirmish_btn_change_enemy_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:onClick="onButtonChangeEnemy2Clicked"
                        android:text="@string/skirmish_change" />
                </TableRow>

                <TableRow
                    android:id="@+id/activity_skirmish_tr_enemy_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/activity_skirmish_tv_enemy_3_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/skirmish_opponent_aircraft" />
                    <TextView
                        android:id="@+id/activity_skirmish_tv_enemy_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="A6M Zero" />
                    <Button
                        android:id="@+id/activity_skirmish_btn_change_enemy_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:onClick="onButtonChangeEnemy3Clicked"
                        android:text="@string/skirmish_change" />
                </TableRow>

                <TableRow
                    android:id="@+id/activity_skirmish_tr_enemy_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/activity_skirmish_tv_enemy_4_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/skirmish_opponent_aircraft" />
                    <TextView
                        android:id="@+id/activity_skirmish_tv_enemy_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="A6M Zero" />
                    <Button
                        android:id="@+id/activity_skirmish_btn_change_enemy_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:onClick="onButtonChangeEnemy4Clicked"
                        android:text="@string/skirmish_change" />
                </TableRow>

            </TableLayout>

        </ScrollView>

        <Button
            android:id="@+id/activity_skirmish_btn_action"
            style="@style/fsg_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin_half"
            android:onClick="onButtonStartMissionClicked"
            android:text="@string/skirmish_start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
